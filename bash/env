# Adding /usr/local/(s)bin and MySQL at start of path
export PATH=/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:$PATH

# Adding ~/bin to pick up my functions
export PATH=$PATH:~/bin

# The one true text editor.
export EDITOR='/Users/andy/bin/vim'

# Graphviz.  See http://www.ryandesign.com/graphviz/faq.php
#export PATH=$PATH:/usr/local/graphviz/bin

# Lots of Java apps look for JAVA_HOME
#export JAVA_HOME=/Library/Java/Home

# Set up colours for ls.
# The lscolors.sh file was generated on my Rails Machine by running:
#
# $ dircolors --sh /etc/DIR_COLORS > lscolors.sh
#
# The dircolors command does not appear to be available on OS X.
#
# TODO: cf http://github.com/rtomayko/dotfiles/blob/rtomayko/.bashrc#L238-247
source ~/.dircolors/lscolors.sh

# Ignore the tedious "you have new mail".
# Hmm, doesn't seem to prevent the message :(
unset MAILCHECK
