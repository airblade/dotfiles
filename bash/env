# Prepend ~/bin and /usr/local/(s)bin to pick up my functions
export PATH="~/bin:/usr/local/bin:/usr/local/sbin:$PATH"

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# Prepend trusted bin directories to path.
# https://github.com/sstephenson/rbenv/issues/309
# https://twitter.com/tpope/status/165631968996900865
export PATH=".git/safe/../../bin:$PATH"

# Append MySQL
# export PATH="$PATH:/usr/local/mysql/bin"

# Ignore the tedious "you have new mail".
# Hmm, doesn't seem to prevent the message :(
unset MAILCHECK

# Colourise the terminal.
export CLICOLOR=1

# less
# -F  exit when less than one screen of output
# -R  display colours
# +F  go to end of file and wait for more data
export LESS='-F -R'
