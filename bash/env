# Prepend ~/bin to pick up my functions
export PATH=~/bin:$PATH

# Append /usr/local/(s)bin and MySQL
export PATH=$PATH:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin

# rbenv
export PATH=$HOME/.rbenv/bin:$PATH
eval "$(rbenv init -)"

# Ignore the tedious "you have new mail".
# Hmm, doesn't seem to prevent the message :(
unset MAILCHECK

# Colourise the terminal.
export CLICOLOR=1

# less
# -F  exit when less than one screen of output
# -r  display colours
export LESS='-F -r'
