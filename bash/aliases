# Meta
alias ea='vim ~/dotfiles/bash/aliases'

# The one true text editor
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'
alias m='mvim'

# Git
alias gs='git status -s'
alias gd='git diff'
alias gl='git tlog -10'
alias conflicts?='ack "<<<<<<< HEAD" -l'

# Rails
alias sc='script/console'
alias sg='script/generate'
alias sgm='script/generate migration'
alias sp='script/plugin install'
alias ms='mongrel_rails start'
alias rdbm='rake db:migrate'

# Bundler
alias be='bundle exec'
alias ber='bundle exec rake'
alias bert='bundle exec rake test'
alias besc='bundle exec script/cucumber'

# Passenger
alias rst='touch tmp/restart.txt'

# Directories
alias less='less -r'
alias ls='ls -G'  # colourful
alias lsdot='ls -lAd .*'

# Changing directory
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Processes
alias pg="ps wwaux | grep -v 'grep' | grep -i"
alias topm='top -o vsize' # memory
alias topc='top -o cpu'   # cpu

# Apps
alias acorn='open -a Acorn'
