# Meta
alias ea='vim ~/dotfiles/bash/aliases'

# Git
alias g='git'
alias gs='git status -s'
alias gd='git diff'
alias gl='git l -10'
alias glb='git l HEAD ^master'

# rbenv
alias rr='rbenv rehash'

# Bundler
alias be='bundle exec'
alias bert='bundle exec rake test'
alias besc='bundle exec script/cucumber'

# Rails
alias log='less +F log/development.log'

# Passenger / Pow
alias rst='touch tmp/restart.txt'

# Directories
alias lls='ls -l'
alias lsdot='ls -lAd .*'

# Changing directory
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Processes
alias topm='top -o vsize' # memory
alias topc='top -o cpu'   # cpu

# History
# Read new (global) history lines into current history list.
alias hh='history -n'

# Miscellaneous
alias ship='git push && bundle exec cap deploy'

# Ag
alias ag='ag --smart-case'
