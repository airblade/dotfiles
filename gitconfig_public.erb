[alias]
	co = checkout
	ci = commit
	caa = commit -a --amend -C HEAD
	st = status
	br = branch
	ds = diff -M -C --find-copies-harder -l64 --stat HEAD
	tlog = log --pretty=oneline --abbrev-commit --graph --decorate
	# Undo your last commit, but don't throw away your changes
	undo = reset --soft HEAD^
	unstage = reset HEAD
	discard = checkout --
	ri = !sh -c 'git rebase -i HEAD~"$1"' -
[apply]
	whitespace = nowarn
[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto
	ui = true
[gc]
	auto = 1
[push]
	default = tracking
[merge]
	summary = true
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
