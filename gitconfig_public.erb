[alias]
	co = checkout
	ci = commit
	caa = commit -a --amend -C HEAD
	st = status
	br = branch
  l = log --abbrev-commit --graph --date=relative
  r = !git l -10
	# Undo your last commit, but don't throw away your changes
	undo = reset --soft HEAD^
	unstage = reset HEAD
	discard = checkout --
	ir = !sh -c 'git rebase -i HEAD~"$1"' -
[apply]
	whitespace = nowarn
[format]
  pretty=format:%C(yellow)%h%Creset%Cgreen%d%Creset %s %C(blue)(%ar) %C(cyan)<%an>
[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto
	ui = true
[gc]
	auto = 1
[push]
	default = tracking
[merge]
	summary = true
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
