[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	df = diff
	ds = diff -M -C --find-copies-harder -l64 --stat HEAD
	tlog = log --pretty=oneline --abbrev-commit --graph --decorate
	unstage = reset HEAD
	discard = checkout --
	history = log --
[apply]
	whitespace = nowarn
[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto
	ui = true
[gc]
	auto = 1
[push]
	default = tracking
[merge]
	summary = true
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
